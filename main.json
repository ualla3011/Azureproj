{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "locEastUS": {
            "type": "string",
            "defaultValue": "eastus"
        },
        "locEastUS2": {
            "type": "string",
            "defaultValue": "eastus2"
        },
        "vnetNameEastUS": {
            "type": "string"
        },
        "vnetNameEastUS2": {
            "type": "string"
        },
        "availabilitySetName": {
            "type": "string"
        },
        "vm1": {
            "type": "string"
        },
        "vm2": {
            "type": "string"
        },
        "eastus2vm": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "firewallName": {
            "type": "string"
        },
        "firewallSubnetName": {
            "type": "string"
        },
        "publicIpName": {
            "type": "string"
        },
        "nicPrefix": {
            "type": "string"
        },
        "vmPrefix": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "vnet-deploy",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/ualla3011/Azureproj/main/infra/network/vnet-peering.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "locEastUS": {
                        "value": "[parameters('locEastUS')]"
                    },
                    "locEastUS2": {
                        "value": "[parameters('locEastUS2')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "eastusvm-deploy",
            "dependsOn": [
                "vnet-deploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/ualla3011/Azureproj/main/infra/compute/eastusvm.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "locEastUS": {
                        "value": "[parameters('locEastUS')]"
                    },
                    "availabilitySetName": {
                        "value": "[parameters('availabilitySetName')]"
                    },
                    "vmPrefix": {
                        "value": "[parameters('vmPrefix')]"
                    },
                    "nicPrefix": {
                        "value": "[parameters('nicPrefix')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vnetNameEastUS": {
                        "value": "[parameters('vnetNameEastUS')]"
                    },
                    "subnetName": {
                        "value": "eastus-subnet"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "eastus2vm-deploy",
            "dependsOn": [
                "vnet-deploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/ualla3011/Azureproj/main/infra/compute/eastus2vm.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "locEastUS2": {
                        "value": "[parameters('locEastUS2')]"
                    },
                    "eastus2vm": {
                        "value": "[parameters('eastus2vm')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vnetNameEastUS2": {
                        "value": "[parameters('vnetNameEastUS2')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "firewall-deployment",
            "dependsOn": [
                "eastus2vm-deploy"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/ualla3011/Azureproj/main/infra/network/firewall.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "locEastUS2": {
                        "value": "[parameters('locaEastUS2')]"
                    },
                    "firewallName": {
                        "value": "[parameters('firewallName')]"
                    },
                    "firewallSubnetName": {
                        "value": "[parameters('firewallSubnetName')]"
                    },
                    "publicIpName": {
                        "value": "[parameters('publicIpName')]"
                    },
                    "vnetName": {
                        "value": "[parameters('vnetNameEastUS2')]"
                    }
                }
            }
        }
    ]
}
